<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_As_Guest.Settings.SettingClass">


    <TextView
        android:id="@+id/text_view_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="probelalkhan@gmail"
        android:textAlignment="center"
        android:textSize="13sp" />


    <androidx.cardview.widget.CardView
        android:background="@color/lightttgrayy"
        android:backgroundTint="@color/lightttgrayy"
       android:layout_margin="15dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView_id1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardCornerRadius="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/image_view"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_account_circle_black_24dp"
                  android:tint="@color/gray"
                    android:backgroundTint="@color/gray"

                    />

                <TextView

                    android:layout_marginLeft="-30dp"
                    android:id="@+id/text_view_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Belal Khan"

                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"/>


            </LinearLayout>


            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/text_view_logout"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-100dp"
                android:background="@color/White"
                android:backgroundTint="@color/lightgrayy"
                android:fontFamily="sans-serif-light"
                android:text="Sign Out"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/gray_one"

                android:textSize="20sp"
                android:textStyle="bold"

                />


            <!--
            <Button

                android:text="Sign Out"
                android:layout_marginBottom="-100dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:backgroundTint="@color/lightgrayy"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/gray_one"
                android:background="@color/White"
                android:id="@+id/logout_button_back"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"

                />

-->



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:background="@color/lightttgrayy"
        android:backgroundTint="@color/lightttgrayy"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView_id2"
        android:layout_below="@id/cardView_id1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardCornerRadius="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-8dp">

                <ImageView
                    android:layout_marginRight="10dp"
                    android:tint="@color/gray"
                    android:layout_marginTop="12dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_error_black_24dp" />





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Question or concerns"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp"


                    />

            </LinearLayout>



            <Button
                android:text="Help"
                android:layout_marginBottom="-100dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:backgroundTint="@color/lightgrayy"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/gray_one"
                android:background="@color/White"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"

                />





        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:background="@color/lightttgrayy"
        android:backgroundTint="@color/lightttgrayy"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView_id3"
        android:layout_below="@id/cardView_id2"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardCornerRadius="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-8dp">

                <ImageView

                    android:tint="@color/gray"
                    android:layout_marginTop="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mode_comment_black_24dp" />





                <TextView
                    android:layout_width="200dp"
                    android:layout_marginBottom="13dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Tell us how you feel about Virtual Cook!"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp"


                    />

            </LinearLayout>



            <Button
                android:text="Give Feedback"
                android:layout_marginBottom="-100dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:backgroundTint="@color/lightgrayy"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/gray_one"
                android:background="@color/White"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"

                />





        </LinearLayout>

    </androidx.cardview.widget.CardView>






</RelativeLayout>



