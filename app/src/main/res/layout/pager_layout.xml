<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    //logo
    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual"
            android:fontFamily="cursive"
            android:textSize="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="CooK"
            android:textColor="@color/pink"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:tint="@color/graydark"/>


    </LinearLayout>





    //image
    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/LL1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <ImageView
            android:id="@+id/slide_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pg1" />


    </LinearLayout>

    //text
    <LinearLayout
        android:id="@+id/LL3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL2"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp" >


        <TextView
            android:id="@+id/pg_heading_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/pg_heading_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" diet program ?"
            android:textSize="20sp"
            android:textColor="@color/pink"
            android:fontFamily="sans-serif"
            android:layout_toRightOf="@id/pg_heading_1"
            />
    </LinearLayout>


    //discription

    //discription

    <RelativeLayout
        android:id="@+id/RRL1"
        android:layout_below="@id/LL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        //for line1  TEXT
        <LinearLayout
            android:id="@+id/LL4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/pg_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There is lot of food category that you can "
                android:fontFamily="sans-serif"
                android:layout_centerInParent="true"
                />

        </LinearLayout>

        //for line2 TEXT
        <LinearLayout
            android:id="@+id/LL5"
            android:layout_below="@id/LL4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
            <TextView
                android:id="@+id/pg_description_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose your favorite"
                android:fontFamily="sans-serif"
                android:layout_centerInParent="true"


                />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>